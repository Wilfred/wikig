{
  "name": "wikig",
  "version": "1.0.0",
  "description": "A blog-influenced wiki",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . bin/* --ignore-pattern '**/*.min.js' -f codeframe --fix",
    "watch": "concurrently nodemon gulp",
    "gulp": "gulp",
    "start": "node ./bin/www",
    "init-db": "node ./bin/init-db",
    "test": "IN_MEMORY_DB=true jest",
    "test-circleci": "IN_MEMORY_DB=true jest --ci --runInBand --reporters=default --reporters=jest-junit --collectCoverage=true"
  },
  "keywords": [
    "wiki",
    "markdown"
  ],
  "author": "Wilfred Hughes",
  "repository": "https://github.com/Wilfred/wikig",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cache-manager": "^2.11.1",
    "commonmark": "^0.29.1",
    "commonmark-extract-text": "^0.1.0",
    "commonmark-linkify": "^1.2.0",
    "commonmark-twemoji": "^1.1.0",
    "commonmark-wikiwords": "^3.0.0",
    "compression": "^1.7.4",
    "compromise": "^12.3.0",
    "debug": "^4.1.1",
    "emojilib": "^2.4.0",
    "express": "^4.17.1",
    "express-basic-auth": "^1.2.0",
    "express-cache-middleware": "^1.0.1",
    "express-handlebars": "^3.1.0",
    "font-awesome": "^4.7.0",
    "hammerjs": "^2.0.8",
    "http-errors": "^1.7.3",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "random-item": "^3.0.0",
    "semantic-ui-css": "^2.4.1",
    "sqlite3": "^4.1.1",
    "string-similarity": "^4.0.1",
    "twemoji": "^12.1.5"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "eslint": "^7.2.0",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-concat-css": "^3.1.0",
    "gulp-csso": "^4.0.1",
    "gulp-purgecss": "^1.2.0",
    "gulp-rename": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "jest": "^24.9.0",
    "jest-junit": "^10.0.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2"
  }
